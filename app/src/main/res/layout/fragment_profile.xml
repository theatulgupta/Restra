<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_screen">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/custom_profile_background"
        android:elevation="20dp"
        android:orientation="vertical"
        android:paddingVertical="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtUserName"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/custom_input_box"
            android:fontFamily="@font/n_bold"
            android:padding="10dp"
            android:text="Atul Kumar Gupta"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtPhoneNumber"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_input_box"
            android:fontFamily="@font/n_bold"
            android:padding="10dp"
            android:text="+91 7723807525"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtEmailAddress"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_input_box"
            android:fontFamily="@font/n_bold"
            android:padding="10dp"
            android:text="atulgupta3058@gmail.com"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtDeliveryAddress"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_input_box"
            android:fontFamily="@font/n_bold"
            android:padding="10dp"
            android:text="India"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="30dp"
        android:src="@drawable/ic_profile_image"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>