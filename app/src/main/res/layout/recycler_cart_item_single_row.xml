<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:weightSum="5">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_dash"
            app:tint="@color/light_red" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtCartFoodName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="3dp"
        android:layout_weight="3.2"
        android:fontFamily="@font/n_extrabold"
        android:text="Baco Indian"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtCartFoodPrice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_weight="1.3"
        android:fontFamily="@font/n_extrabold"
        android:text="Rs. 200"
        android:textAlignment="center"
        android:textColor="@color/rupeeYellow"
        android:textSize="18sp" />


</LinearLayout>